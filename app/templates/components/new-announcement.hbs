<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="/../styles/app.css" type="text/css">

{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>

      <button {{action 'saveAnnouncement'}} class='btn btn-warning'>Save</button><br><br>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}} class='btn btn-primary'>New Announcement</button><br><br>
{{/if}}
