{{#if updateAnnouncementForm}}
  <h4>Update Announcement</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=announcement.title}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=announcement.body}}
      </div>

      <button {{action 'update' announcement}} class="btn btn-success">Save</button>
    </form>
  </div>
{{else}}
    <button {{action 'updateAnnouncementForm'}} class="btn btn-success">Update</button>
  {{/if}}
